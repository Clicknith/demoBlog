{% extends "base.html.twig" %}


{% block title %} BACKOFFICE | Gestion des articles {% endblock %}


{% block body %}

    <h1 class="display-4 my-4 text-center" > MODIFICATION DE L' ARTICLE</h1>

    {{form_start(formEdit, {'attr': {'class': 'col-md-7 mx-auto'}} ) }}

        {{ form_row(formEdit.title, {'attr': {'placeholder': "Saisir le titre de l'article"}}) }}

        {{ form_row(formEdit.category)  }}

        {{ form_row(formEdit.content, {'attr': {'placeholder': "Contenu de l'article", "rows": 10}}) }}

        {{ form_row(formEdit.image, {'attr': {'placeholder': "Saisir l'URL de l'image..."}}) }}

        <button type="submit" class="btn btn-info mb-5">

            Enregistrer les modifications
        
        </button>

        
    {{form_end(formEdit) }}

{% endblock %}